										<p>DIREÇÃO VENTO: <%= @almirantado_ext_data[:wdir][-3].round()%> °</p>
										<p>RAJADA: <%= @almirantado_ext_data[:gust][-3].round()%> m/s</p>
									<% end %>
								<% else %>
									<p>ÚLTIMO DADO: <%= @almirantado_ext_data[:date_time][-2].strftime('%Y/%m/%d %H:%M')%></p>
									<p>ALTURA ONDAS: <%= @almirantado_ext_data[:swvht][-2].round(1)%> m</p>
