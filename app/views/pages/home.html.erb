<div class="tempo-real">
	<div class="container" id= "tempo-real">  
		<h2 class="text-center mt-4">Tempo Real</h2>        
		<div class="row">
			<div class="col-sm-12 col-md-6 col-lg-6 text-right"> 
				<div id="map"
							style="width: 100%; height: 600px;"
							data-markers="<%= @systems.to_json %>"
							data-almirantadoint="<%= @almirantado_int_data.to_json %>"
							data-almirantadoext="<%= @almirantado_ext_data.to_json %>"
							data-inpe="<%= @inpe_data.to_json %>"
							data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
				</div>
			</div>
			<div class="col-sm-12 col-md-6 col-lg-6 text-right box"> 
				<% @systems.each do |system| %> 			
					<div class="card-product mt-1">
						<img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
						<div class="card-product-infos">
							<h3><%=system.name.upcase%></h3>
							<% if system.name.upcase == 'almirantado_int' %>
								<% if @almirantado_int_data[:swvht][-3] %>
									<p>ÚLTIMO DADO: <%= @almirantado_int_data[:date_time][-3].strftime('%Y/%m/%d %H:%M')%></p>
									<p>ALTURA ONDAS: <%= @almirantado_int_data[:swvht][-3].round(1)%> m</p>
									<p>PERÍODO ONDAS: <%= @almirantado_int_data[:tp][-3].round(1)%> s</p>
									<p>DIREÇÃO ONDAS: <%= @almirantado_int_data[:wvdir][-3].round()%>°</p>
									<p>SST: <%= @almirantado_int_data[:sst][-3].round()%> °C</p>
									<% if @almirantado_int_data[:wspd][-3] %>
										<p>VELOCIDADE VENTO: <%= @almirantado_int_data[:wspd][-3].round()%> m/s</p>
										<p>DIREÇÃO VENTO: <%= @almirantado_int_data[:wdir][-3].round()%> °</p>
										<p>RAJADA: <%= @almirantado_int_data[:gust][-3].round()%> m/s</p>
									<% end %>
								<% else %>
									<p>ÚLTIMO DADO: <%= @almirantado_int_data[:date_time][-2].strftime('%Y/%m/%d %H:%M')%></p>
									<p>ALTURA ONDAS: <%= @almirantado_int_data[:swvht][-2].round(1)%> m</p>
									<p>PERÍODO ONDAS: <%= @almirantado_int_data[:tp][-2].round(1)%> s</p>
									<p>DIREÇÃO ONDAS: <%= @almirantado_int_data[:wvdir][-2].round()%>°</p>
									<p>SST: <%= @almirantado_int_data[:sst][-2].round()%> °C</p>
									<% if @almirantado_int_data[:wspd][-2] %>
